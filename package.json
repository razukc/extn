{
  "name": "extn",
  "version": "0.1.0",
  "description": "CLI for building Chrome extensions",
  "main": "dist/index.js",
  "bin": {
    "extn": "dist/cli/index.js"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "node -e \"require('fs-extra').removeSync('dist')\"",
    "build": "npm run clean && tsc && npm run copy-templates",
    "copy-templates": "node -e \"require('fs-extra').copySync('src/templates', 'dist/templates')\"",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run test:unit",
    "prerelease:check": "node scripts/pre-publish-check.js",
    "release": "dotenv -e .env -- release-it",
    "release:minor": "dotenv -e .env -- release-it minor",
    "release:major": "dotenv -e .env -- release-it major",
    "release:patch": "dotenv -e .env -- release-it patch",
    "release:dry": "dotenv -e .env -- release-it --dry-run"
  },
  "keywords": [
    "chrome-extension",
    "cli",
    "build-tool",
    "manifest-v3",
    "developer-tools"
  ],
  "author": "razukc",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/razukc/extn.git"
  },
  "bugs": {
    "url": "https://github.com/razukc/extn/issues"
  },
  "homepage": "https://github.com/razukc/extn#readme",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "ora": "^7.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^1.0.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.50.0",
    "memfs": "^4.6.0",
    "prettier": "^3.0.0",
    "release-it": "^19.0.6",
    "typescript": "^5.2.0",
    "vitest": "^1.0.0"
  }
}
